# Supabase Configuration
# Get these values from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration
DATABASE_URL=your_database_connection_string

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_AUDIENCE_ID=your_resend_audience_id

# Cron Job Authentication
# Generate a secure random string for authenticating Vercel cron jobs
# Example: openssl rand -base64 32
CRON_SECRET=your_secure_random_string

# Map Service (Mapbox)
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token

# Site URL for redirects (used for auth callbacks and password resets)
# Local development: http://localhost:3000
# Production: https://your-production-domain.com
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Cookie Consent (Termly)
# Get your Website UUID from Termly dashboard
NEXT_PUBLIC_TERMLY_ID=your_termly_website_uuid

# Analytics (Hotjar/Contentsquare)
# Get your script URL from your Hotjar/Contentsquare dashboard
# Example: https://t.contentsquare.net/uxa/098c15b7c8c2c.js
NEXT_PUBLIC_HOTJAR_SCRIPT_SRC=your_contentsquare_script_url

# Logo Service (Logo.dev)
# Sign up at https://www.logo.dev/signup and get your public key (starts with pk_)
NEXT_PUBLIC_LOGO_DEV_TOKEN=your_logo_dev_public_key